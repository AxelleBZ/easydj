<div class="profile-banner d-flex align-items-center" id="user-profile">
  <div class="container d-flex align-items-center">
    <%= cl_image_tag(@user.photo.url, class: "image-profile") %>
    <div class="profile-content d-flex flex-column align-items-center">

      <% if current_user == @user %>
        <h1>Welcome <%= @user.first_name %></h1>
      <% end  %>

      <h2><%= @user.first_name %> <%= @user.last_name %></h2>
      <p>Username: <%= @user.username %></p>
      <p>Email: <%= @user.email %></p>
      <p>Member since: 2015</p>
      <p>Number of posts: <%= @user.items.count  %></p>
      <p> See items: <%= render "../pages/items"  %></p>

      <a href="javascript:history.go(-1)" title="Return to the previous page">&laquo; Go back</a>

      <% if current_user == @user %>
        <%= link_to "edit profile",  edit_user_registration_path%>
      <% end %>


    </div>
  </div>
</div>






