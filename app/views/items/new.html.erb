<div class="container">
  <%= simple_form_for(@item) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :condition %>
      <%= f.input :deposit %>
      <%= f.input :delivery %>
      <%= f.input :policies %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :photo %>

    </div>

    <div class="form-actions">
      <%= f.button :submit,class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
