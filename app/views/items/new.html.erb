<div class="container" id="form-search">
  <%= simple_form_for(@item) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :condition, as: :radio_buttons, collection: ["new", "slightly-used", "heavily-used"], item_wrapper_class: "inline_form_check" %>
      <%= f.input :price %>
      <%= f.input :location %>
      <%= f.input :deposit %>
      <%= f.input :delivery %>
      <%= f.input :start_date, as: :date, html5: true %>
      <%= f.input :end_date, as: :date, html5: true %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.input :photo %>

    </div>

    <div class="form-actions">
      <%= f.button :submit,class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "back", items_path(@items) %>
</div>
