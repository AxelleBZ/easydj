<div class="container">
  <%= simple_form_for(@item) do |f| %>
    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :description %>
      <%= f.input :price %>
      <%= f.input :condition %>
      <%= f.input :deposit %>
      <%= f.input :image_url %>
      <%= f.input :delivery %>
      <%= f.input :policies %>
    </div>

    <div class="form-actions">
      <%= f.button :submit,class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to "back", items_path(@items) %>
</div>
