<div class="container show-container">
  <div class="row">

    <div class="col-8">
      <div class="item-title">
        <h1><%= @item.name %></h1>
      </div>

      <div class="item-photo">
        <%= cl_image_tag @item.photo, height: 300, width: 400, crop: :fill %>
      </div>
      <div class="item-details">
        <p><strong>Description:</strong> <%= @item.description %></p>
        <p><strong>Condition:</strong> <%= @item.condition %></p>
        <p><strong>Price:</strong> $<%= @item.price %></p>
        <p><strong>Deposit:</strong> $<%= @item.deposit %></p>
        <p><strong>Location:</strong> <%= @item.location %></p>
        <p><strong>Delivery:</strong> <%= @item.delivery %></p>
      </div>

      <div class="row map-row">
        <div
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        ></div>
      </div>

      <div class="btn return-button">
        <%= link_to "Return", items_path %>
      </div>
    </div>

    <div class="col-4">
      <div class="book-form">
        <div class="card form-card">
          <%= simple_form_for [@item, @rental] do |f| %>
            <%= f.input :start_date, as: :date, html5: true %>
            <%= f.input :end_date, as: :date, html5: true %>
            <%= f.submit "Book", class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>

    </div>


  </div>
</div>










