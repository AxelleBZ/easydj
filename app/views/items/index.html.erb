<div class="container container-height mt-4">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-4">
        <div class="card-product">
          <%= link_to item_path(item) do %>
          <%= cl_image_tag(item.photo, class:"card-picture") %>
          <div class="card-product-infos">
            <h2><%= truncate(item.name, {length: 35}) %></h2>
            <% end %>
            <p><%= truncate(item.description, {length: 50}) %></p>
            <h2 class="card-trip-pricing">$<%= item.price %></h2>
            <a style="color:white" href="#aboutModal" data-toggle="modal" data-target="#user-modal-<%= item.user.id %>">
              <%= cl_image_tag(item.user.photo, class:"avatar") %>
           </a>
          </div>
        </div>
        <!-- <span class="span3 well"></span> -->
      </div>
      <%= render partial: 'shared/profile-pop', locals: { user: item.user } %>
    <% end %>
  </div>
</div>



